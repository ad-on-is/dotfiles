// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "relative_line_numbers": "enabled",
  "tab_size": 2,
  "debugger": {
    "format_dap_log_messages": true,
    "log_dap_communications": true
  },
  "inlay_hints": {
    "show_value_hints": true
  },
  "vim_mode": true,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "ui_font_size": 14,
  "buffer_font_size": 12,
  "ui_font_family": "Maple Mono NF",
  "buffer_font_family": "Maple Mono NF",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha (Darker)"
  },

  "features": {
    "edit_prediction_provider": "copilot"
  },

  "close_on_file_delete": true,
  "excerpt_context_lines": 3,
  "expand_excerpt_lines": 10,
  "agent_ui_font_size": 14.0,
  "buffer_line_height": "comfortable",
  "rounded_selection": false,

  "git": {
    "inline_blame": {
      "min_column": 0,
      "padding": 4,
      "delay_ms": 200,
      "show_commit_summary": true
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    },
    "button": true
  },

  "title_bar": {
    "show_branch_icon": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_user_picture": false,
    "show_onboarding_banner": true,
    "show_sign_in": true
  },

  "toolbar": {
    "code_actions": true,
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true
  },

  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },

  "project_panel": {
    "hide_gitignore": true,
    "file_icons": true,
    "folder_icons": true,
    "default_width": 300,
    "dock": "left",
    "auto_fold_dirs": true,
    "button": true,
    "auto_reveal_entries": true,
    "entry_spacing": "standard"
  },

  "outline_panel": {
    "dock": "right",
    "button": true
  },

  "minimap": {
    "show": "always",
    "max_width_columns": 35
  },

  "collaboration_panel": {
    "default_width": 300,
    "button": true
  },
  "notification_panel": {
    "button": true
  },
  "git_panel": {
    "sort_by_path": true,
    "default_width": 300,
    "button": true
  },

  "tabs": {
    "git_status": false,
    "file_icons": true,
    "close_position": "right",
    "activate_on_close": "neighbour"
  },

  "file_finder": {
    "modal_max_width": "medium",
    "include_ignored": "all"
  },

  "active_pane_modifiers": {
    "inactive_opacity": 0.7,
    "border_size": 1
  },

  "preferred_line_length": 140,
  "show_wrap_guides": true,
  "scroll_beyond_last_line": "off",

  "seed_search_query_from_cursor": "selection",

  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },

  "scrollbar": {
    "show": "never"
  },

  "vim": {
    // "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 500
  },

  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "active_line_width": 2
  },

  "use_smartcase_search": true,

  "lsp": {
    "intelephense": {
      "binary": {
        "path": "intelephense",
        "arguments": ["--stdio"]
      },
      "settings": {
        "intelephense": {
          "licenceKey": "~/intelephense/license.txt",
          "files": {
            "maxSize": 1000000
          }
        }
      }
    }
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "php-cs-fixer-stdin",
          "arguments": ["-"]
        }
      }
    }
  },

  "auto_install_extensions": {
    "ansible": true,
    "basher": true,
    "csv": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "github-actions": true,
    "golangci-lint": true,
    "html": true,
    "log": true,
    "lua": true,
    "make": true,
    "markdown-oxide": true,
    "nginx": true,
    "prisma": true,
    "opencode": true,
    "scheme": true,
    "sql": true,
    "terraform": true,
    "toml": true,
    "vscode-icons": true,
    "wakatime": true,
    "zig": true,
    "php": true
  }
}
